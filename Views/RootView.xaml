						<Grid Height="90" 
									Margin="10 5">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="160"/>
								<ColumnDefinition/>
							</Grid.ColumnDefinitions>

							<Grid Background="{StaticResource MDH.Palette.BlueGrey.600}"
										Column="0"
										Margin="10 5"
										Shadow.Level="2">
